<div class="container">
   <div class="rows"> 
      <div class="col-xs-12">
         <h2> List of Products </h2>
         <table class="table">
           <thead>
             <tr>
               <th>Product</th>
               <th colspan="3"></th>
             </tr>
           </thead>

           <tbody>
             <% @products.each do |product| %>
             <tr>
               <td>
                 <h4> <%= product.name %> </h4>
               </td>
               <td>
                 <%= link_to 'Show', product, class: 'btn btn-primary btn-xs' %>
               </td>
               <td>
                 <%= button_to 'Remove', product, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger btn-xs' %>
               </td>
             </tr>
             <% end %>
           </tbody>
         </table>

         <h4> Click here to <%= link_to 'Add New Products', root_path %> </h4>

      </div>
   </div>
</div>
